OCAMLINCLUDES[] += $(EVENTLOOP_DIR)

DBUS_O_FILES[] =
	dbus_type
	dbus_value
	dbus_type_parse
	dbus_type_marshal
	dbus_message
	dbus_message_parse
	dbus_message_marshal
	dbus_msglib
	dbus_conv
	dbus_auth
	protocol
	platform
	utils
	dbus_connection

DBUS_C_FILES[] =
	platform_stubs

LIB = dbus

platform.$(CMO) platform.o : platform_stubs.o

platform_stubs.o: platform_stubs.c
	$(OCAMLC) -c -o $@ $^

OCAML_LIB_FLAGS[] += $(absname $(addsuffix .o, $(DBUS_C_FILES)))

DBUS_LIB = $(OCamlLibrary $(LIB), $(DBUS_O_FILES))

.DEFAULT: $(DBUS_LIB)

.PHONY: clean
clean:
	$(CLEAN) $(DBUS_LIB)

.SUBDIRS: test
