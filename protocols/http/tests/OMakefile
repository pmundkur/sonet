OCAMLINCLUDES[] += $(HTTP_LIB_DIR)

OCAML_LIBS[] += $(HTTP_LIB_DIR)/http

OCAML_OTHER_LIBS[] +=
	str
	unix

TEST_PARSER_PROG = test_http
TEST_PARSER = $(OCamlProgram $(TEST_PARSER_PROG), test_http)

TEST_CONN_PROG = test_http_conn
TEST_CONN = $(OCamlProgram $(TEST_CONN_PROG), test_http_conn)

TEST_URI_PROG = test_uri
TEST_URI = $(OCamlProgram $(TEST_URI_PROG), test_uri)


.DEFAULT: $(TEST_PARSER) $(TEST_CONN) $(TEST_URI)

.PHONY: clean
clean:
	$(CLEAN) $(TEST_PARSER) $(TEST_CONN) $(TEST_URI)
